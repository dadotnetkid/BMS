
@using Models.Repository
@model ComplaintTypes

<div class="fixed-width">
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.ComplaintType, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Complaint Type";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.Descriptions, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Descriptions";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
 
    <div class="row margin-top-10">
        <div class="col-lg-12">
            @{
                Html.DevExpress().Button(settings =>
               {
                   settings.Name = "btnSubmit";
                   settings.Text = "Submit";
                   settings.ClientSideEvents.Click = "function(s,e){ComplaintTypeGridView.UpdateEdit()}";
               }).GetHtml();
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "function(s,e){ComplaintTypeGridView.CancelEdit()}";
                }).GetHtml();
            }
        </div>
    </div>
</div>
