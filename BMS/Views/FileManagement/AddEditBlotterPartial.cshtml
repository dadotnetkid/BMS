
@using Models.Repository
@model Blotters
@{
    EditingMode editingMode = ViewBag.EditingMode;
}
<input name="BlotterId" value="@(Model?.BlotterId)" type="hidden" />

<div class="fixed-width">
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().CheckBoxFor(m => m.IsCleared, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Is Cleared";
                }).GetHtml();
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.ComplainantName, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Complainant Name";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.ComplainantAddress, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Complainant Address";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.ComplaintTypeId, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Complainant Type";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.TextField = "ComplaintType";
                    settings.Properties.ValueField = "Id";
                }).BindList(new UnitOfWork().ComplaintTypesRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().MemoFor(m => m.Description, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Description";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().DateEditFor(m => m.IncidentDate, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Incident Date";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.IncidentPlace, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Incident Place";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.ViolatorId, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Violator";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.TextField = "FullName";
                    settings.Properties.ValueField = "Id";

                }).BindList(new UnitOfWork().PersonalInformationsRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-lg-12">
            @{
                Html.DevExpress().Button(settings =>
               {
                   settings.Name = "btnSubmit";
                   settings.Text = "Submit";
                   settings.ClientSideEvents.Click = "function(s,e){BlottersGridView.UpdateEdit()}";
               }).GetHtml();
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "function(s,e){BlottersGridView.CancelEdit()}";
                }).GetHtml();
            }
        </div>
    </div>
</div>
