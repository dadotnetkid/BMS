@using Models.Repository
@model PersonalInformations
<div class="fixed-width">
    <div class="row">
        <div class="col-lg-8">

            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TextBoxFor(m => m.FirstName, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "First Name";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TextBoxFor(m => m.MiddleName, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Middle Name";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TextBoxFor(m => m.LastName, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Last Name";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TextBoxFor(m => m.Ext, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Ext";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TextBoxFor(m => m.ContactNumber, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Contact Number";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().MemoFor(m => m.AddressLine1, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Address Line1";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().MemoFor(m => m.AddressLine2, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Address Line2";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().DateEditFor(m => m.Birthdate, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Birth Date";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().MemoFor(m => m.BirthPlace, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Birth Place";
                            settings.Properties.NullText = settings.Properties.Caption;
                        }).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().ComboBoxFor(m => m.Sex, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Sex";
                            settings.Properties.NullText = settings.Properties.Caption;
                            settings.Properties.TextField = "TextField";
                            settings.Properties.TextField = "ValueField";
                        }).BindList(new UnitOfWork().DropdownsRepo.Get(m => m.TableName == "Sex")).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().ComboBoxFor(m => m.CivilStatus, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Civil Status";
                            settings.Properties.NullText = settings.Properties.Caption;
                            settings.Properties.TextField = "TextField";
                            settings.Properties.TextField = "ValueField";
                        }).BindList(new UnitOfWork().DropdownsRepo.Get(m => m.TableName == "CivilStatus")).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().ComboBoxFor(m => m.Citizenship, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Citizenship";
                            settings.Properties.NullText = settings.Properties.Caption;
                            settings.Properties.TextField = "TextField";
                            settings.Properties.TextField = "ValueField";
                        }).BindList(new UnitOfWork().DropdownsRepo.Get((m => m.TableName == "Citizenship"))).GetHtml();
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().TokenBoxFor(m => m.GroupIds, settings =>
                        {
                            settings.Width = Unit.Percentage(100);
                            settings.Properties.Caption = "Group";
                            settings.Properties.NullText = settings.Properties.Caption;
                            settings.Properties.TextField = "GroupName";
                            settings.Properties.ValueField = "Id";
                        }).BindList(new UnitOfWork().GroupsRepo.Get()).GetHtml();
                    }
                </div>
            </div>
            <div class="row margin-top-10">
                <div class="col-lg-12">
                    @{
                        Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "btnSubmit";
                            settings.Text = "Submit";
                            settings.ClientSideEvents.Click = "function(s,e){PersonalInformationGridView.UpdateEdit()}";

                        }).GetHtml();
                        Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "btnCancel";
                            settings.Text = "Cancel";
                            settings.ClientSideEvents.Click = "function(s,e){PersonalInformationGridView.CancelEdit()}";
                        }).GetHtml();
                    }
                </div>
            </div>
        </div>

    <div class="col-lg-4">
        @Html.Partial("UploadImagePartial", Model)
    </div>
    </div>
</div>