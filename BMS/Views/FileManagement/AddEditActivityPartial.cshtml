
@using Models.Repository
@model Activities
<input type="hidden" value="@(Model?.ActivityId)" name="MeetingId" />
<div class="fixed-width">
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.GroupId, settings =>
                {
                    settings.Name = "GroupId";
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "GroupId";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.ValueField = "Id";
                    settings.Properties.TextField = "GroupName";
                }).BindList(new UnitOfWork().GroupsRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().TextBoxFor(m => m.Subject, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Subject";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().DateEditFor(m => m.ActivityDate, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Activity Date";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.DisplayFormatString = "MM/dd/yy hh:mm tt";
                    settings.Properties.EditFormatString = settings.Properties.DisplayFormatString;
                    settings.Properties.TimeSectionProperties.Visible = true;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().MemoFor(m => m.Description, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Description";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>



    <div class="row margin-top-10">
        <div class="col-lg-12">
            @{
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnSubmit";
                    settings.Text = "Submit";
                    settings.ClientSideEvents.Click = "function(s,e){ActivityGridView.UpdateEdit()}";
                }).GetHtml();
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "function(s,e){ActivityGridView.CancelEdit()}";
                }).GetHtml();
            }
        </div>
    </div>
</div>
