
@using Models.Repository
@model Certifications
<div class="fixed-width">
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.CertificationTypeId, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Certification Type";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.TextField = "CertificationType";
                    settings.Properties.ValueField = "Id";
                    settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){performCallback({PersonalInformationId:PersonalInformationId.GetValue(),CertificationTypeId:CertificationTypeId.GetValue(),Purpose:Purpose.GetValue()})}";
                }).BindList(new UnitOfWork().CertificationTypesRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.PersonalInformationId, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Personal Information";
                    settings.Properties.NullText = settings.Properties.Caption;
                    settings.Properties.TextField = "FullName";
                    settings.Properties.ValueField = "Id";
                    settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){performCallback({PersonalInformationId:PersonalInformationId.GetValue(),CertificationTypeId:CertificationTypeId.GetValue(),Purpose:Purpose.GetValue()})}";
                }).BindList(new UnitOfWork().PersonalInformationsRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().SpinEditFor(m => m.OrNo, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Or No";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().ComboBoxFor(m => m.CTCNo, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "CTC No";
                    settings.Properties.TextField = "CtcNo";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).BindList(new UnitOfWork().CedulasRepo.Get()).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().SpinEditFor(m => m.AmountPaid, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Amount Paid";

                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().MemoFor(m => m.Purpose, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Description";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @{
                Html.DevExpress().DateEditFor(m => m.IssuedDate, settings =>
                {
                    settings.Width = Unit.Percentage(100);
                    settings.Properties.Caption = "Issued Date";
                    settings.Properties.NullText = settings.Properties.Caption;
                }).GetHtml();
            }
        </div>
    </div>

    <div class="row margin-top-10">
        <div class="col-lg-12">
            @{
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnSubmit";
                    settings.Text = "Submit";
                    settings.ClientSideEvents.Click = "function(s,e){CertificateGridView.UpdateEdit()}";
                }).GetHtml();
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "function(s,e){CertificateGridView.CancelEdit()}";
                }).GetHtml();
            }
        </div>
    </div>
</div>

